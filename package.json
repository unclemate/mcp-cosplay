{
  "name": "mcp-cosplay",
  "version": "0.2.1",
  "description": "MCP server that adds cosplay and personality to LLM responses (stdio mode only)",
  "main": "dist/index.js",
  "bin": {
    "mcp-cosplay": "dist/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "keywords": [
    "mcp",
    "cosplay",
    "personality",
    "llm",
    "ai",
    "typescript"
  ],
  "author": "",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "git@github.com:unclemate/mcp-cosplay.git"
  },
  "bugs": {
    "url": "https://github.com/unclemate/mcp-cosplay/issues"
  },
  "homepage": "https://github.com/unclemate/mcp-cosplay#readme",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.1",
    "zod": "^4.1.9"
  },
  "devDependencies": {
    "@types/chai": "^5.2.2",
    "@types/deep-eql": "^4.0.2",
    "@types/estree": "^1.0.8",
    "@types/json-schema": "^7.0.15",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "tsx": "^4.6.2",
    "typescript": "^5.3.0",
    "vitest": "^3.2.4"
  }
}
